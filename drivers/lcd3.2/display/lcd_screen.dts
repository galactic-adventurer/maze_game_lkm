/dts-v1/;
/plugin/;

/ {
    fragment@0 {
        target = <&spi0>; 
        __overlay__ {
            lcd_display@0 {
                compatible = "lcd_ili9341";
                reg = <0>; // Chip select number
                spi-max-frequency = <1000000>; // 1 MHz
            };
        };
    };
};
